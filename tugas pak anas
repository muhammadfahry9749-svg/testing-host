    <script>
        // Logika Navigasi Halaman
        function showPage(pageId) {
            document.querySelectorAll('.page').forEach(p => p.classList.remove('active'));
            document.getElementById(pageId).classList.add('active');
            
            if (pageId === 'adminPage') {
                generateOnlineQR();
            }
        }

        /**
         * Menghasilkan QR Online menggunakan QuickChart API
         */
        function generateOnlineQR() {
            const qrImg = document.getElementById("qr-online-img");
            const skeleton = document.getElementById("qr-skeleton");
            const dlBtn = document.getElementById("dl-btn");
            
            // Link yang akan disulap jadi QR (menuju buku tamu)
            const currentUrl = window.location.href.split('#')[0] + "?action=register";
            document.getElementById('targetUrl').innerText = currentUrl;
            
            // URL API QR Online
            const apiUrl = `https://quickchart.io/qr?text=${encodeURIComponent(currentUrl)}&size=300&margin=2&ecLevel=H`;
            
            qrImg.src = apiUrl;
            
            qrImg.onload = () => {
                skeleton.style.display = 'none';
                qrImg.classList.remove('hidden');
                dlBtn.disabled = false;
                dlBtn.classList.remove('bg-slate-800', 'text-slate-500', 'cursor-not-allowed');
                dlBtn.classList.add('bg-amber-700', 'text-white', 'hover:bg-amber-600', 'shadow-lg');
            };
        }

        /**
         * Fungsi Download Gambar QR
         */
        async function downloadQR() {
            const qrImg = document.getElementById("qr-online-img");
            try {
                const response = await fetch(qrImg.src);
                const blob = await response.blob();
                const url = window.URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.style.display = 'none';
                a.href = url;
                a.download = 'QR-ONLINE-GRAND-DELUXE.png';
                document.body.appendChild(a);
                a.click();
                window.URL.revokeObjectURL(url);
            } catch (err) {
                // Jika download blob gagal (masalah CORS), buka di tab baru
                window.open(qrImg.src, '_blank');
            }
        }

        // Form Submission & Auto-Redirect
        document.getElementById('reservationForm').addEventListener('submit', function(e) {
            e.preventDefault();
            this.classList.add('hidden');
            const success = document.getElementById('successMessage');
            const progress = document.getElementById('progress');
            success.classList.remove('hidden');

            let width = 0;
            const interval = setInterval(() => {
                if (width >= 100) {
                    clearInterval(interval);
                    // Kembali ke Halaman Utama Hotel
                    showPage('homePage'); 
                    
                    // Reset UI form di latar belakang
                    setTimeout(() => {
                        document.getElementById('reservationForm').reset();
                        document.getElementById('reservationForm').classList.remove('hidden');
                        success.classList.add('hidden');
                        progress.style.width = '0%';
                    }, 500);
                } else {
                    width += 2;
                    progress.style.width = width + '%';
                }
            }, 50); // Sekitar 2.5 detik total animasi redirect
        });

        // Deteksi Parameter URL (Triggered by QR Scan)
        window.onload = () => {
            const urlParams = new URLSearchParams(window.location.search);
            if (urlParams.get('action') === 'register') {
                showPage('guestPage');
            }

            // Set default dates
            const checkin = document.getElementById('checkin');
            const checkout = document.getElementById('checkout');
            if(checkin && checkout) {
                const now = new Date();
                checkin.valueAsDate = now;
                now.setDate(now.getDate() + 1);
                checkout.valueAsDate = now;
            }
        }
    </script>
</body>
