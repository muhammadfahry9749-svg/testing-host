            <!-- Kontainer QR Online -->
            <div class="bg-white p-6 rounded-3xl inline-block shadow-[0_0_60px_rgba(217,119,6,0.2)] mb-8 overflow-hidden">
                <div id="qr-wrapper" class="relative w-64 h-64 flex items-center justify-center bg-white">
                    <div id="qr-skeleton" class="absolute inset-0 qr-placeholder rounded-lg"></div>
                    <img id="qr-online-img" class="relative z-10 w-full h-full hidden" alt="QR Code Buku Tamu">
                </div>
            </div>

            <div class="space-y-4">
                <button onclick="downloadQR()" id="dl-btn" disabled class="w-full bg-slate-800 text-slate-500 py-4 rounded-xl font-bold flex items-center justify-center gap-2 transition cursor-not-allowed">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" /></svg>
                    Unduh Gambar QR (PNG)
                </button>
                
                <div class="p-4 bg-white/5 border border-white/10 rounded-xl text-left">
                    <p class="text-[10px] text-slate-500 uppercase font-bold mb-1 tracking-widest">Link Scan:</p>
                    <p id="targetUrl" class="text-xs text-amber-600 font-mono break-all opacity-80"></p>
